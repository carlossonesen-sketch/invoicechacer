rules_version = "2";
service cloud.firestore {
  match /databases/{database}/documents {

    function signedIn() {
      return request.auth != null;
    }

    // For existing docs (read/update/delete)
    function isOwner() {
      return signedIn() && resource.data.userId == request.auth.uid;
    }

    // For new docs (create)
    function isOwnerCreate() {
      return signedIn() && request.resource.data.userId == request.auth.uid;
    }

    // Invoices live at /invoices/{invoiceId}
    match /invoices/{invoiceId} {
      allow read: if isOwner();
      allow create: if isOwnerCreate();
      allow update, delete: if isOwner();
    }

    // Email events live at /emailEvents/{eventId}
    // You query by invoiceId; restrict read/write to owner via userId
    match /emailEvents/{eventId} {
      allow read: if isOwner();
      allow create: if isOwnerCreate();
      allow update, delete: if isOwner();
    }
  }
}
