    "firebase-admin": "^13.6.0",
    "firebase-functions": "^7.0.3",
    "resend": "^4.0.0"
  },
  "devDependencies": {
    "@types/node": "^20",
    "typescript": "^5.0.0"
  },
  "private": true
}
