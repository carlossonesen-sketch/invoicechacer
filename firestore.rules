rules_version = "2";
service cloud.firestore {
  match /databases/{database}/documents {

    function signedIn() {
      return request.auth != null;
    }

    // For existing docs (read/update/delete)
    function isOwner() {
      return signedIn() && resource.data.userId == request.auth.uid;
    }

    // For new docs (create)
    function isOwnerCreate() {
      return signedIn() && request.resource.data.userId == request.auth.uid;
    }

    // Invoices live at /invoices/{invoiceId}
    match /invoices/{invoiceId} {
      allow read: if isOwner();
      allow create: if isOwnerCreate();
      allow update, delete: if isOwner();
    }

    // Email events live at /emailEvents/{eventId}
    // You query by invoiceId; restrict read/write to owner via userId
    match /emailEvents/{eventId} {
      allow read: if isOwner();
      allow create: if isOwnerCreate();
      allow update, delete: if isOwner();
    }

    // User profiles live at /users/{uid}
    // Users can only read/write their own profile
    match /users/{uid} {
      allow read, write: if signedIn() && request.auth.uid == uid;
    }

    // User subscriptions live at /users/{uid}/subscription/{docId}
    // Users can only read/write their own subscription
    match /users/{uid}/subscription/{docId} {
      allow read, write: if signedIn() && request.auth.uid == uid;
    }

    // Business profiles live at /businessProfiles/{uid}
    // Users can only read/write their own business profile
    match /businessProfiles/{uid} {
      allow read, write: if signedIn() && request.auth.uid == uid;
    }
  }
}
